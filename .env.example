# =============================================================================
# Voicebot RAG - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# LLM Service Configuration
# -----------------------------------------------------------------------------
# OpenAI-compatible API endpoint (vLLM or llama.cpp)
OPENAI_COMPAT_BASE_URL=http://localhost:8001/v1
MODEL_NAME=llama-3.1-8b-instruct
MAX_TOKENS=2048
TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Embedding & RAG Configuration
# -----------------------------------------------------------------------------
EMBED_MODEL=intfloat/e5-small-v2
VECTOR_DB=faiss
FAISS_PATH=/data/faiss.index
PG_DSN=postgresql://user:pass@postgres:5432/rag

# -----------------------------------------------------------------------------
# Speech Services
# -----------------------------------------------------------------------------
STT_URL=http://localhost:8002
WHISPER_MODEL=base
TTS_URL=http://localhost:8003
PIPER_VOICE=en_US-lessac-medium

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
S3_BUCKET=voicebot-practice
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=replace_me_with_secure_random_string
CORS_ORIGINS=http://localhost:3000,http://localhost:80
RATE_LIMIT=60

# -----------------------------------------------------------------------------
# Service Endpoints
# -----------------------------------------------------------------------------
APP_HOST=0.0.0.0
APP_PORT=8080
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_PORT=9100
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------
CUDA_VISIBLE_DEVICES=0
WORKERS=4
MAX_CONCURRENT_REQUESTS=100

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
DEBUG=false
RELOAD=false
